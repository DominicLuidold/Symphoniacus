<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane
        fx:id="grid"
        fx:controller="at.fhv.teamb.symphoniacus.presentation.LoginController"
        xmlns:fx="http://javafx.com/fxml" alignment="center"
        hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="300" prefWidth="300"
                           maxWidth="300" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <ImageView fx:id="image" GridPane.rowIndex="0" GridPane.columnSpan="2"
               GridPane.rowSpan="1" GridPane.halignment="CENTER"
               pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="/images/icon.png" backgroundLoading="true" />
        </image>
        <fitHeight>150</fitHeight>
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </ImageView>

    <!-- Add Header Label -->
    <Label fx:id="label" text="%login.field.title" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.columnSpan="1"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="24"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <!-- Add Name Text Field -->
    <TextField fx:id="userShortcutField" prefHeight="40" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3" promptText="%login.field.usershortcut.prompt" GridPane.halignment="CENTER" />

    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField" prefHeight="40" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="5" promptText="%login.field.password.prompt" GridPane.halignment="CENTER" />

    <!-- Add Submit Button -->
    <Button fx:id="submitButton" text="%login.field.submit"
            prefWidth="300" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#processLoginCredentials">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>